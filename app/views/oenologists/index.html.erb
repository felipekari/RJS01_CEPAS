<p id="notice"><%= notice %></p>

<h1>Enologo</h1>

<%= link_to 'Nuevo Enologo', new_oenologist_path %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Edad</th>
      <th>Nacionalidad</th>
      <th>Revistas</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @oenologists.each do |oenologist| %>
      <tr>
        <td><%= oenologist.name %></td>
        <td><%= oenologist.age %></td>
        <td><%= oenologist.nationality %></td>
        <td>
          <ul>
            <% oenologist.magazines.each do |m| %>
              <li>
                <%= m.name %>
              </li>
              <% end %>
          </ul>
        </td>
        <!-- <td><%= link_to 'Show', oenologist %></td> -->
        <td><%= link_to 'Edit', edit_oenologist_path(oenologist) %></td>
        <td><%= link_to 'Destroy', oenologist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


