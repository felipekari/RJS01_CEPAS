<h1>Ensamblajes</h1>

<% if current_user.admin? %>
  <%= link_to 'Nuevo Vino', new_wine_path %>
  <br>
<% end %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Cepas</th>
      <th>Notas</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @wines.each do |wine| %>
      <tr>
        <td><%= wine.name %></td>
        <td>
          <ul>
            <% @wine_varieties.varietieslist(wine.id).each do |v| %>
              <li>
                <%= v.variety.name %> (<%= v.percentage %>%)
              </li>
              <% end %>
          </ul>
        </td>
        <td>
          <ul>
            <% @wine_oenologists.oenologistscore(wine.id).each do |e| %>
              <li>
                <%= e.oenologist.name %> (<%= e.score %>/100)
              </li>
              <% end %>
          </ul>
        </td>
        <!-- <td><%= link_to 'Show', wine %></td> -->
        <td><%= link_to 'Edit', edit_wine_path(wine) %></td>
        <td><%= link_to 'Destroy', wine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

