<div class="nested-fields">
  <%= form.hidden_field :_destroy %>
  <div class="input-group mb-3">
    <span class="input-group-text">Cepa</span>
    <%= form.collection_select(:variety_id, Variety.available_v.order(:name), :id, :name, {prompt: 'Selecciona una cepa'}, {class: 'form-select form-select-sm'}) %>
    <%= form.number_field :percentage, class: 'form-control form-control-sm', placeholder: 'Porcentaje' %>
    <span class="input-group-text">%</span>
  </div>
  <div>
    <%= link_to "Remove", '#', class: "remove_fields" %>
  </div>
</div>