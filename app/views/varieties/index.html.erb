<p id="notice"><%= notice %></p>

<h1>Cepas</h1>

<table class="table table-hover table-sm">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Disponibilidad</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @varieties.each do |variety| %>
      <tr>
        <td><%= variety.name %></td>
        <td>
          <div>
            <% if variety.available? %>
              <span class="badge bg-success">Disponible</span>
            <% else %>
              <span class="badge bg-secondary">No disponible</span>
            <% end %>
          </div>
        </td>
        <!-- <td><%= link_to 'Show', variety %></td> -->
        <td><%= link_to 'Edit', edit_variety_path(variety) %></td>
        <td><%= link_to 'Destroy', variety, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

